{
  "compilerOptions": {
    "target": "es2016",                                  
    "jsx": "react-native",                                
    "module": "commonjs",  
    "esModuleInterop": true,                              
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",                              
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,                        
    "skipLibCheck": true,
    "resolveJsonModule": true                              
  }
}
